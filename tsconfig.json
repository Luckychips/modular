    "module": "commonjs",
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
